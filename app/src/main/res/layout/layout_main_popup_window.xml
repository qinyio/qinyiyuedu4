<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#85934A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_popupWindow_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/shuji" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_popupWindow_textview_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main_popupWindow_textview_zuozhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_popupWindow_textview_zuixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A3000000" />

    <TextView
        android:id="@+id/main_popupWindow_textview_jianjie"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/item_texttext"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#85934A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#85934A"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_popupWindow_button_shanchu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/item_popbutton"
            android:text="删除"
            android:textColor="#000000" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/main_popupWindow_button_yuedu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/item_popbutton"
            android:text="阅读"
            android:textColor="#000000" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#85934A" />

</LinearLayout>