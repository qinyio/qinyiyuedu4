<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.fragment.BlankFragment_shucheng">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shucheng_textview_xuanhuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="玄幻"
            android:textColor="#D2000000" />

        <TextView
            android:id="@+id/shucheng_textview_qihuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="奇幻"
            android:textColor="#D2000000" />

        <TextView
            android:id="@+id/shucheng_textview_wuxia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="武侠"
            android:textColor="#D2000000" />

        <TextView
            android:id="@+id/shucheng_textview_dushi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="都市"
            android:textColor="#D2000000" />

        <TextView
            android:id="@+id/shucheng_textview_lishi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="历史"
            android:textColor="#D2000000" />

        <TextView
            android:id="@+id/shucheng_textview_junshi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="军事"
            android:textColor="#D2000000" />

        <TextView
            android:id="@+id/shucheng_textview_youxi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="游戏"
            android:textColor="#D2000000" />

        <TextView
            android:id="@+id/shucheng_textview_kehuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_chang"
            android:gravity="center"
            android:text="科幻"
            android:textColor="#D2000000" />

    </LinearLayout>

    <com.example.qinyiyuedu4.util.ViewPager2Container
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/shucheng_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.example.qinyiyuedu4.util.ViewPager2Container>


</LinearLayout>